{
  "name": "bubbly",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch backend/src --exec node --loader ts-node/esm backend/src/index.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "generate": "prisma generate --schema=backend/prisma/schema.prisma",
    "migrate": "prisma migrate dev --schema=backend/prisma/schema.prisma",
    "prisma:seed": "prisma db seed --schema=backend/prisma/schema.prisma"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.jest.json",
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@prisma/client)"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alsamri/Bubbly.git"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alsamri/Bubbly/issues"
  },
  "homepage": "https://github.com/Alsamri/Bubbly#readme",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.5.0"
  }
}
