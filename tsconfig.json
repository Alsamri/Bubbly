{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node", // Change this to Node (instead of Node16 or NodeNext)
    "outDir": "./backend/dist",
    "rootDir": "./backend",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["backend/src/**/*", "backend/tests/**/*"],
  "exclude": ["node_modules", "frontend"]
}
